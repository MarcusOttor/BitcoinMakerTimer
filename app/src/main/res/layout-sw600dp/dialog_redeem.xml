<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="260dp"
    android:minHeight="260dp"
    android:background="@drawable/redeem_back"
    android:orientation="vertical"
    android:maxHeight="260dp"
    android:maxWidth="270dp"
    android:minWidth="270dp">

    <TextView
        android:layout_marginTop="8dp"
        fontPath="fonts/ProximaNovaBold.otf"
        android:textColor="@color/colorPrimaryDark"
        android:text="Withdraw\n0.0000256 BTC"
        android:id="@+id/btcToRedeemText"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="4dp"
        android:src="@drawable/coin"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        fontPath="fonts/ProximaNovaBold.otf"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:text="Please, fill the information field\nbelow and click the REDEEM button"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:maxLength="100"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:id="@+id/emailText"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:hint="Your bitcoin wallet"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/redeem_dialog"
        android:layout_marginTop="16dp"
        android:id="@+id/redeemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
